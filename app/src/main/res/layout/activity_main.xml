<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/img_fire"
        android:layout_width="90dp"
        android:layout_height="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232"
        app:layout_constraintHorizontal_bias="0.112"
        android:src="@drawable/fire" />

    <go.energy.crypto.cryptoenergy.CustomArcProgress
        android:id="@+id/circle_progress_bar_fire"
        android:layout_marginTop="15dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        custom:arc_progress="55"
        custom:arc_finished_color="#99ccff"
        custom:arc_text_size="0dp"
        custom:arc_suffix_text_size="0dp"
        custom:arc_angle="300"
        app:layout_constraintBottom_toBottomOf="@id/img_fire"
        app:layout_constraintLeft_toLeftOf="@id/img_fire"
        app:layout_constraintRight_toRightOf="@id/img_fire"
        app:layout_constraintTop_toTopOf="@id/img_fire"/>

    <ImageView
        android:id="@+id/img_drop"
        android:layout_width="90dp"
        android:layout_height="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232"
        app:layout_constraintHorizontal_bias="0.492"
        android:src="@drawable/drop"/>

    <go.energy.crypto.cryptoenergy.CustomArcProgress
        android:id="@+id/circle_progress_bar_drop"
        android:layout_marginTop="15dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        custom:arc_progress="55"
        custom:arc_finished_color="#99ccff"
        custom:arc_text_size="0dp"
        custom:arc_suffix_text_size="0dp"
        custom:arc_angle="300"
        app:layout_constraintBottom_toBottomOf="@id/img_drop"
        app:layout_constraintLeft_toLeftOf="@id/img_drop"
        app:layout_constraintRight_toRightOf="@id/img_drop"
        app:layout_constraintTop_toTopOf="@id/img_drop"/>

    <ImageView
        android:id="@+id/img_leaf"
        android:layout_width="90dp"
        android:layout_height="108dp"
        android:src="@drawable/leaf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232"
        app:layout_constraintHorizontal_bias="0.859"/>

    <go.energy.crypto.cryptoenergy.CustomArcProgress
        android:id="@+id/circle_progress_bar_leaf"
        android:layout_marginTop="15dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        custom:arc_progress="55"
        custom:arc_finished_color="#99ccff"
        custom:arc_text_size="0dp"
        custom:arc_suffix_text_size="0dp"
        custom:arc_angle="300"
        app:layout_constraintBottom_toBottomOf="@id/img_leaf"
        app:layout_constraintLeft_toLeftOf="@id/img_leaf"
        app:layout_constraintRight_toRightOf="@id/img_leaf"
        app:layout_constraintTop_toTopOf="@id/img_leaf"/>

    <ImageView
        android:id="@+id/img_air"
        android:layout_width="90dp"
        android:layout_height="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478"
        app:layout_constraintHorizontal_bias="0.314"
        android:src="@drawable/cloud" />

    <go.energy.crypto.cryptoenergy.CustomArcProgress
        android:id="@+id/circle_progress_bar_air"
        android:layout_marginTop="15dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        custom:arc_progress="55"
        custom:arc_finished_color="#99ccff"
        custom:arc_text_size="0dp"
        custom:arc_suffix_text_size="0dp"
        custom:arc_angle="300"
        app:layout_constraintBottom_toBottomOf="@id/img_air"
        app:layout_constraintLeft_toLeftOf="@id/img_air"
        app:layout_constraintRight_toRightOf="@id/img_air"
        app:layout_constraintTop_toTopOf="@id/img_air"/>

    <ImageView
        android:id="@+id/img_electricity"
        android:layout_width="90dp"
        android:layout_height="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478"
        app:layout_constraintHorizontal_bias="0.701"
        android:src="@drawable/energie" />

    <go.energy.crypto.cryptoenergy.CustomArcProgress
        android:id="@+id/circle_progress_bar_electricity"
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        custom:arc_progress="55"
        custom:arc_finished_color="#99ccff"
        custom:arc_text_size="0dp"
        custom:arc_suffix_text_size="0dp"
        custom:arc_angle="300"
        app:layout_constraintBottom_toBottomOf="@id/img_electricity"
        app:layout_constraintLeft_toLeftOf="@id/img_electricity"
        app:layout_constraintRight_toRightOf="@id/img_electricity"
        app:layout_constraintTop_toTopOf="@id/img_electricity"/>


    <ImageView
        android:id="@+id/img_special"
        android:layout_width="90dp"
        android:layout_height="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714"
        android:src="@drawable/specialleafdrop" />

    <go.energy.crypto.cryptoenergy.CustomArcProgress
        android:id="@+id/circle_progress_bar_special"
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        custom:arc_progress="55"
        custom:arc_finished_color="#99ccff"
        custom:arc_text_size="0dp"
        custom:arc_suffix_text_size="0dp"
        custom:arc_angle="300"
        app:layout_constraintBottom_toBottomOf="@id/img_special"
        app:layout_constraintLeft_toLeftOf="@id/img_special"
        app:layout_constraintRight_toRightOf="@id/img_special"
        app:layout_constraintTop_toTopOf="@id/img_special"/>


    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/number_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.145"
        android:padding="10dp" />

    <TextView
        android:id="@+id/cur_level"
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_cur_level"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <TextView
        android:id="@+id/cur_level_int"
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <Button
        android:id="@+id/quests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_quests"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.912" />

    <Button
        android:id="@+id/resources"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_resources"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.912" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/competition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_competition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.912" />



</android.support.constraint.ConstraintLayout>